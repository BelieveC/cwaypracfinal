<header>
	<div class="row">
			<%=form_tag(assignments_path,method: :get) do%>
				<%=text_field_tag :search,params[:search],class:"form-control",placeholder:"Search Assignment"%>
				<br>
				<%=submit_tag("Search",class:"button")%>
				<br>
				<br>
			<% end%>
			<%if @query.present?%>
				<p><strong><%=@assignment.count%></strong> results found for <strong><%=@query %></strong></p>
				<br>
				<br>
			<%end %>
			<h1>Assignments</h1>
            <% @assignments.each do |assignment|%>
                <article class="four columns featured_post">
                    <h3><%=link_to assignment.topic,assignment%></h3> 
                    <% %>
                    <%=link_to image_tag(assignment.aimages.first.image.url,alt:"desc",style:"width:100%;height:200px;"),assignment %>
                    <p><%=simple_format(assignment.description)%></p>

                    <div class="post_meta">
                        <i class="fa fa-clock-o" aria-hidden="true"> <%=time_ago_in_words(assignment.created_at)%></i>
                        <i class="fa fa-user" aria-hidden="true" style="margin-left:15px"> Admin</i>
                        <i class="fa fa-comments" aria-hidden="true" style="margin-left: 15px">5</i>
                    </div>
                </article>
            <% end %>
    </div>

</header>





