<header>
        <div class="row">
        	<%=form_tag(practicals_path,method: :get) do%>
				<%=text_field_tag :search,params[:search],class:"form-control",placeholder:"Search Practicals"%>
				<br>
				<%=submit_tag("Search",class:"button")%>
				<br>
				<br>
			<% end%>
			<%if @query.present?%>
				<p><strong><%=@practicals.count%></strong> results found for <strong><%=@query %></strong></p>
				<br>
				<br>
			<%end %>
            <h1>Practicals</h1>
                <% @practicals.each do |practical|%>
                    <article class="four columns featured_post">
                        <h3><%=link_to practical.aim,practical%></h3> 
                        <% %>
                        <%=link_to image_tag(practical.images.first.sheet.url,alt:"desc",style:"width:100%;height:200px;"),practical %>
                        <strong><%=simple_format(practical.description)%></strong>

                        <div class="post_meta">
                            <i class="fa fa-clock-o" aria-hidden="true"> <%=time_ago_in_words(practical.created_at)%></i>
                            <i class="fa fa-user" aria-hidden="true" style="margin-left:15px"> Admin</i>
                            <i class="fa fa-comments" aria-hidden="true" style="margin-left: 15px">5</i>
                        </div>
                    </article>
                <% end %>
        </div>
</header>




























